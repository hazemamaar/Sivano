<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sivano" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_app</item>
        <item name="colorPrimaryVariant">@color/brown_b</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_b</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
     <style name="setup_ed_txt"
         parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
         >

         <item name="boxCornerRadiusBottomEnd">@dimen/_7sdp</item>
         <item name="boxCornerRadiusBottomStart">@dimen/_7sdp</item>
         <item name="boxCornerRadiusTopEnd">@dimen/_7sdp</item>
         <item name="boxCornerRadiusTopStart">@dimen/_7sdp</item>
<!--         <item name="boxStrokeColor">@color/gray</item>-->
<!--         <item name="strokeColor">@color/gray</item>-->
<!--         <item name="strokeWidth">@dimen/_1sdp</item>-->
<!--         <item name="boxStrokeWidth">1dp</item>-->
         <item name="boxStrokeColor">@color/gray</item>
         <item name="boxStrokeWidth">1dp</item>
         <item name="maxLines">1</item>
         <item name="boxBackgroundColor">@color/white</item>
         <item name="helperTextTextColor">@color/black_app</item>
        <item name="android:textSize">@dimen/_10ssp</item>

     </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_30sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_30sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="button_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/black_app</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/ic__core_slide_bottomtotop</item>
        <item name="android:windowExitAnimation">@anim/ic__core_slide_toptobottom</item>
    </style>
</resources>